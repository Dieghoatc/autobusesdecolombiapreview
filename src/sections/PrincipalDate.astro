<section
  class="animate-fade-in animate-delay-300 mt-32 mx-auto flex flex-col justify-center items-center text-center text-primary"
>
  <h2 class="uppercase text-3xl sm:text-4xl md:text-5xl font-semibold">
    1 de Enero
    <span aria-hidden class="hidden md:inline mx-1">·</span>
    <br aria-hidden class="block md:hidden" />
    <span>
      <script is:inline>
        const END_DATE = 1722816000000;
        const d = new Date(END_DATE);
        const date = d.toLocaleTimeString("es", {
          hour: "2-digit",
          minute: "2-digit",
        });

        // get current timezone
        const tzOffset = d.getTimezoneOffset() / 60;
        const diff = tzOffset * -1;
        const gmt = diff > 0 ? `GMT+${diff}` : `GMT-${Math.abs(diff)}`;

        const selfScript = document.currentScript;
        selfScript.parentNode.innerHTML = `${date}h ${gmt}`;
      </script>
    </span>
  </h2>
  <h3 class="uppercase text-2x1 font-medium flex flex-col max-w-sm mt-6">
    Re-lanzamiento de nuesta página web
  </h3>
</section>
